{
  "name": "m3core-crm",
  "version": "1.0.0",
  "private": true,
  "description": "M3Labs Hybrid CRM - Multi-tenant Real Estate Management Platform",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend & npm run dev:marketing",
    "dev:backend": "npm run dev -w @m3core/backend",
    "dev:frontend": "npm run dev -w @m3core/frontend",
    "dev:marketing": "npm run dev -w @m3core/marketing",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:marketing",
    "build:shared": "npm run build -w @m3core/shared",
    "build:backend": "npm run build -w @m3core/backend",
    "build:frontend": "npm run build -w @m3core/frontend",
    "build:marketing": "npm run build -w @m3core/marketing",
    "lint": "npm run lint --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces && rm -rf node_modules"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^8.57.0",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=24.5.0",
    "npm": ">=11.4.2"
  },
  "dependencies": {
    "lucide-react": "^0.539.0"
  }
}
